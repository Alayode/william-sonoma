{
  "root": true,
  "extends": ["airbnb-base", "plugin:react/recommended"],
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true
    }
  },
  "rules": {
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "comma-dangle": 0,
    "curly": ["error", "multi-line"],
    "import/no-unresolved": [2, { "commonjs": true }],
		"no-shadow": ["error", { "allow": ["req", "res", "err"] }],
		"indent": [2, "tab"],
		"no-tabs": 0,
		"class-methods-use-this": 0
  }
}
